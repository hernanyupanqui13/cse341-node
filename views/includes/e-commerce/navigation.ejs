<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/e-commerce/">Shop</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/e-commerce/products">Products</a>
            </li>
            <% if(isAuthenticated) { %> 
                <li class="main-header__item">
                    <a class="<%= path === '/cart' ? 'active' : '' %>" href="/e-commerce/cart">Cart</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/orders' ? 'active' : '' %>" href="/e-commerce/orders">Orders</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/e-commerce/admin/add-product">Add Product
                    </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/e-commerce/admin/products">Admin Products
                    </a>
                </li>
            <% } %> 
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/e-commerce/login">Log in</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/e-commerce/signup">Sign up</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/e-commerce/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Log out</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<!-- Mobile Navigation Bar -->
<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/e-commerce/">Shop</a>
